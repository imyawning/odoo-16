<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_asset_depreciation_report_wizard" model="ir.ui.view">
            <field name="name">asset.depreciation.report.wizard.form</field>
            <field name="model">asset.depreciation.report.wizard</field>
            <field name="arch" type="xml">
                <form string="折舊明細表查詢">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="category_ids" widget="many2many_tags"/>
                            <field name="asset_ids" widget="many2many_tags"/>
                            <field name="department_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <footer>
                        <button string="查詢" name="action_generate_report" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>