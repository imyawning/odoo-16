<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <data>
            <record id="action_ji_asset_config" model="ir.actions.act_window">
                <field name="name">固定資產設定</field>
                <field name="res_model">asset.config</field>
                <field name="view_mode">form</field>
                <field name="target">current</field>
                <field name="res_id" ref="ji_accounting_asset.asset_config_default"/>
            </record>
            <record id="action_ji_asset_category" model="ir.actions.act_window">
                <field name="name">固定資產類別</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">asset.category</field>
                <field name="view_mode">tree,form</field>
            </record>
            <record id="action_ji_asset_master" model="ir.actions.act_window">
                <field name="name">固定資產維護作業</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">asset.master</field>
                <field name="view_mode">tree,form</field>
            </record>
            <record id="action_asset_exe_depreciation_wizard" model="ir.actions.act_window">
                <field name="name">批次產生折舊</field>
                <field name="res_model">asset.exe.depreciation.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>
            <record id="action_ji_asset_depreciation" model="ir.actions.act_window">
                <field name="name">折舊作業明細</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">asset.depreciation</field>
                <field name="view_mode">tree,form</field>
                <field name="context">{'search_default_group_by_name': 1}</field>
            </record>
            <record id="action_asset_reverse_depreciation_wizard" model="ir.actions.act_window">
                <field name="name">批次還原折舊</field>
                <field name="res_model">asset.reverse.depreciation.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>
            <record id="action_asset_adjust" model="ir.actions.act_window">
                <field name="name">資產調整作業</field>
                <field name="res_model">asset.adjust</field>
                <field name="view_mode">tree,form</field>
            </record>
            <record id="action_asset_disposal" model="ir.actions.act_window">
                <field name="name">資產報廢作業</field>
                <field name="res_model">asset.disposal</field>
                <field name="view_mode">tree,form</field>
            </record>
            <record id="action_asset_sale" model="ir.actions.act_window">
                <field name="name">資產出售作業</field>
                <field name="res_model">asset.sale</field>
                <field name="view_mode">tree,form</field>
                <field name="search_view_id" ref="view_asset_sale_search"/>
            </record>
            <record id="action_asset_depreciation_report" model="ir.actions.act_window">
                <field name="name">折舊明細表</field>
                <field name="res_model">asset.depreciation.report.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>
            <record id="action_asset_master_report" model="ir.actions.act_window">
                <field name="name">財產目錄清冊</field>
                <field name="res_model">asset.master.report.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
            </record>
            <!--  固資主選單  -->
            <menuitem id="menu_ji_asset_root" name="固定資產" sequence="5" groups="account.group_account_invoice"/>
            <menuitem id="menu_ji_asset_base_root" name="基本資料" sequence="10" parent="menu_ji_asset_root"/>
            <menuitem id="menu_ji_asset_config" name="固定資產設定" parent="menu_ji_asset_base_root" action="action_ji_asset_config" sequence="11"/>
            <menuitem id="menu_ji_asset_category" name="固定資產類別" parent="menu_ji_asset_base_root" action="action_ji_asset_category" sequence="12"/>
            <menuitem id="menu_ji_asset_master" name="固定資產維護作業" parent="menu_ji_asset_base_root" action="action_ji_asset_master" sequence="13"/>
            <menuitem id="menu_ji_asset_depreciation_root" name="折舊" sequence="20" parent="menu_ji_asset_root"/>
            <menuitem id="menu_ji_asset_exe_depreciation_wizard" name="批次產生折舊" parent="menu_ji_asset_depreciation_root" action="action_asset_exe_depreciation_wizard" sequence="21"/>
            <menuitem id="menu_ji_asset_depreciation" name="折舊作業明細" parent="menu_ji_asset_depreciation_root" action="action_ji_asset_depreciation" sequence="22"/>
            <menuitem id="menu_ji_asset_reverse_depreciation_wizard" name="批次還原折舊" parent="menu_ji_asset_depreciation_root" action="action_asset_reverse_depreciation_wizard" sequence="23"/>
            <menuitem id="menu_ji_asset_modify_root" name="異動" sequence="30" parent="menu_ji_asset_root"/>
            <menuitem id="menu_ji_asset_adjust" name="資產調整作業" parent="menu_ji_asset_modify_root" action="action_asset_adjust" sequence="31"/>
            <menuitem id="menu_ji_asset_disposal" name="資產報廢作業" parent="menu_ji_asset_modify_root" action="action_asset_disposal" sequence="32"/>
            <menuitem id="menu_ji_asset_sale" name="資產出售作業" parent="menu_ji_asset_modify_root" action="action_asset_sale" sequence="33"/>
            <menuitem id="menu_ji_asset_report_root" name="報表" sequence="50" parent="menu_ji_asset_root"/>
            <menuitem id="menu_ji_asset_depreciation_report" name="折舊明細表" parent="menu_ji_asset_report_root" action="action_asset_depreciation_report" sequence="51"/>
            <menuitem id="menu_ji_asset_master_report" name="財產目錄清冊" parent="menu_ji_asset_report_root" action="action_asset_master_report" sequence="52"/>
        </data>
    </odoo>