<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_dsc_material_test" model="report.paperformat">
        <field name="name">DSC 材料測試報告專用紙張</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="report_material_test" model="ir.actions.report">
        <field name="name">材料測試報告</field>
        <field name="model">dsc.material.test.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dsc_material_test.report_material_test_document</field>
        <field name="report_file">dsc_material_test.report_material_test_document</field>
        <field name="print_report_name">'材料測試報告-%s' % (object.name)</field>
        <field name="binding_model_id" ref="model_dsc_material_test_report"/>
        <field name="binding_type">report</field>

        <field name="paperformat_id" ref="paperformat_dsc_material_test"/>
    </record>
</odoo>