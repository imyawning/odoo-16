<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dsc_material_test_item_tree" model="ir.ui.view">
        <field name="name">dsc.material.test.item.tree</field>
        <field name="model">dsc.material.test.item</field>
        <field name="arch" type="xml">
            <tree string="測試項目" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_dsc_material_test_item" model="ir.actions.act_window">
        <field name="name">測試項目</field>
        <field name="res_model">dsc.material.test.item</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="view_dsc_material_test_config_tree" model="ir.ui.view">
        <field name="name">dsc.material.test.config.tree</field>
        <field name="model">dsc.material.test.config</field>
        <field name="arch" type="xml">
            <tree string="方法" editable="bottom">
                <field name="name" string="方法名稱"/>
            </tree>
        </field>
    </record>

    <record id="action_dsc_material_test_method_only" model="ir.actions.act_window">
        <field name="name">方法列表</field>
        <field name="res_model">dsc.material.test.config</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="view_dsc_material_test_config_line_tree" model="ir.ui.view">
        <field name="name">dsc.material.test.config.line.tree</field>
        <field name="model">dsc.material.test.config.line</field>
        <field name="arch" type="xml">
            <tree string="方法設定" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="product_categ_id" string="產品類別" width="15%"/>
                <field name="test_item_id" string="測試項目" width="20%"/>
                <field name="config_id" string="方法" width="20%"/>
                <field name="unit" string="單位" width="10%"/>
                <field name="spec" string="規格標準"/>
            </tree>
        </field>
    </record>

    <record id="view_dsc_material_test_config_line_form" model="ir.ui.view">
        <field name="name">dsc.material.test.config.line.form</field>
        <field name="model">dsc.material.test.config.line</field>
        <field name="arch" type="xml">
            <form string="方法設定">
                <sheet>
                    <div class="oe_title">
                        <label for="config_id" string="方法" class="oe_edit_only"/>
                        <h1>
                            <field name="config_id" placeholder="請輸入方法..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="test_item_id" string="測試項目"/>
                            <field name="unit" string="單位"/>
                            <field name="spec" string="規格標準"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dsc_material_test_config_line_search" model="ir.ui.view">
        <field name="name">dsc.material.test.config.line.search</field>
        <field name="model">dsc.material.test.config.line</field>
        <field name="arch" type="xml">
            <search string="搜尋設定">
                <field name="config_id"/>

                <field name="product_categ_id" string="產品類別"/>

                <field name="test_item_id"/>

                <group expand="0" string="分組">
                    <filter string="方法" name="group_by_config" context="{'group_by': 'config_id'}"/>

                    <filter string="產品類別" name="group_by_categ" context="{'group_by': 'product_categ_id'}"/>

                    <filter string="測試項目" name="group_by_item" context="{'group_by': 'test_item_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_dsc_material_test_template_all" model="ir.actions.act_window">
        <field name="name">詳細方法設定</field>
        <field name="res_model">dsc.material.test.config.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <record id="view_dsc_material_test_factory_type_tree" model="ir.ui.view">
        <field name="name">dsc.material.test.factory.type.tree</field>
        <field name="model">dsc.material.test.factory.type</field>
        <field name="arch" type="xml">
            <tree string="廠別設定" editable="bottom">
                <field name="code" string="代號" width="30%"/>
                <field name="name" string="廠別名稱"/>
            </tree>
        </field>
    </record>

    <record id="action_dsc_material_test_factory_type" model="ir.actions.act_window">
        <field name="name">廠別設定</field>
        <field name="res_model">dsc.material.test.factory.type</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>