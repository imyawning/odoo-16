<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_material_test_report_tree" model="ir.ui.view">
        <field name="name">dsc.material.test.report.tree</field>
        <field name="model">dsc.material.test.report</field>
        <field name="arch" type="xml">
            <tree string="Material Test Reports" decoration-success="state=='approved'"
                  decoration-info="state=='confirmed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="date_tested"/>
                <field name="factory"/>
                <field name="material_description"/>
                <field name="color"/>
                <field name="tester"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_material_test_report_form" model="ir.ui.view">
        <field name="name">dsc.material.test.report.form</field>
        <field name="model">dsc.material.test.report</field>
        <field name="arch" type="xml">
            <form string="Material Test Report">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_approve" string="Approve" type="object"
                            invisible="state != 'confirmed'" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_draft" string="Set to Draft" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="factory"/>
                            <field name="is_production"/>
                            <field name="material_description"/>
                            <field name="color"/>
                        </group>
                        <group string="Test Information">
                            <field name="po_number"/>
                            <field name="is_development"/>
                            <field name="date_tested"/>
                            <field name="tester"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Hardness Tab -->
                        <page string="Hardness (硬度)">
                            <group>
                                <group>
                                    <field name="hardness_spec"/>
                                    <field name="hardness_asker_c"/>
                                    <field name="hardness_shore_000"/>
                                    <field name="hardness_asker_f"/>
                                </group>
                                <group>
                                    <field name="hardness_average" readonly="1"/>
                                    <field name="hardness_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Tensile Strength Tab -->
                        <page string="Tensile Strength (拉力)">
                            <group>
                                <group>
                                    <field name="tensile_spec"/>
                                    <field name="tensile_strength_1"/>
                                    <field name="tensile_strength_2"/>
                                    <field name="tensile_strength_3"/>
                                </group>
                                <group>
                                    <field name="tensile_strength_average" readonly="1"/>
                                    <field name="tensile_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Elongation Tab -->
                        <page string="Elongation (延伸率)">
                            <group>
                                <group>
                                    <field name="elongation_spec"/>
                                    <field name="elongation_1"/>
                                    <field name="elongation_2"/>
                                    <field name="elongation_3"/>
                                </group>
                                <group>
                                    <field name="elongation_average" readonly="1"/>
                                    <field name="elongation_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Tear Strength Tab -->
                        <page string="Tear Strength (撕裂強度)">
                            <group>
                                <group>
                                    <field name="tear_spec"/>
                                    <field name="tear_strength_1"/>
                                    <field name="tear_strength_2"/>
                                    <field name="tear_strength_3"/>
                                </group>
                                <group>
                                    <field name="tear_strength_average" readonly="1"/>
                                    <field name="tear_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Resiliency Tab -->
                        <page string="Resiliency (回彈)">
                            <group>
                                <group>
                                    <field name="resiliency_spec"/>
                                    <field name="resiliency_1"/>
                                    <field name="resiliency_2"/>
                                    <field name="resiliency_3"/>
                                </group>
                                <group>
                                    <field name="resiliency_average" readonly="1"/>
                                    <field name="resiliency_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Specific Gravity Tab -->
                        <page string="Specific Gravity (比重)">
                            <group>
                                <group>
                                    <field name="specific_gravity_spec"/>
                                    <field name="specific_gravity_1"/>
                                    <field name="specific_gravity_2"/>
                                    <field name="specific_gravity_3"/>
                                </group>
                                <group>
                                    <field name="specific_gravity_average" readonly="1"/>
                                    <field name="specific_gravity_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Shrinkage Tab -->
                        <page string="Shrinkage (收縮率)">
                            <group>
                                <group>
                                    <field name="shrinkage_spec"/>
                                    <field name="shrinkage_1"/>
                                    <field name="shrinkage_2"/>
                                    <field name="shrinkage_3"/>
                                </group>
                                <group>
                                    <field name="shrinkage_average" readonly="1"/>
                                    <field name="shrinkage_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Compression Set Tab -->
                        <page string="Compression Set (壓縮率)">
                            <group>
                                <group>
                                    <field name="compression_spec"/>
                                    <field name="compression_set_1"/>
                                    <field name="compression_set_2"/>
                                    <field name="compression_set_3"/>
                                </group>
                                <group>
                                    <field name="compression_set_average" readonly="1"/>
                                    <field name="compression_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Split Tear Tab -->
                        <page string="Split Tear (剖中撕裂)">
                            <group>
                                <group>
                                    <field name="split_tear_spec"/>
                                    <field name="split_tear_1"/>
                                    <field name="split_tear_2"/>
                                    <field name="split_tear_3"/>
                                </group>
                                <group>
                                    <field name="split_tear_average" readonly="1"/>
                                    <field name="split_tear_result"/>
                                </group>
                            </group>
                        </page>

                        <!-- Comments and Approvals Tab -->
                        <page string="Comments &amp; Approvals">
                            <group>
                                <group>
                                    <field name="reviewer"/>
                                    <field name="production_manager"/>
                                    <field name="quality_control"/>
                                </group>
                            </group>
                            <group>
                                <field name="comments" placeholder="Enter comments here..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_material_test_report_search" model="ir.ui.view">
        <field name="name">dsc.material.test.report.search</field>
        <field name="model">dsc.material.test.report</field>
        <field name="arch" type="xml">
            <search string="Search Material Test Reports">
                <field name="name"/>
                <field name="material_description"/>
                <field name="color"/>
                <field name="tester"/>
                <field name="factory"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Approved" name="approved" domain="[('state','=','approved')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Tester" name="group_tester" context="{'group_by':'tester'}"/>
                    <filter string="Date Tested" name="group_date" context="{'group_by':'date_tested'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_material_test_report" model="ir.actions.act_window">
        <field name="name">Material Test Reports</field>
        <field name="res_model">dsc.material.test.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Material Test Report
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_material_test_root"
              name="Material Testing"
              sequence="10"/>

    <menuitem id="menu_material_test_report"
              name="Test Reports"
              parent="menu_material_test_root"
              action="action_material_test_report"
              sequence="10"/>
</odoo>