<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_dsc_material_test" model="ir.module.category">
        <field name="name">DSC 材料測試</field>
        <field name="description">管理 DSC 材料測試報告與相關設定</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_material_test_user" model="res.groups">
        <field name="name">使用者</field>
        <field name="category_id" ref="module_category_dsc_material_test"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_material_test_manager" model="res.groups">
        <field name="name">管理員</field>
        <field name="category_id" ref="module_category_dsc_material_test"/>
        <field name="implied_ids" eval="[(4, ref('group_material_test_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>